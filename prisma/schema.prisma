generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [pg_trgm, unaccent]

}

model Porto {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  tags        String[] // array of string
  image       String[] 
  link        String?
  github      String?
  year        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
